<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_loading_error"
        android:text="@string/error_description"
        android:textColor="#000"
        android:textSize="@dimen/smartloadinglayout_text_size" />

    <Button
        android:id="@+id/btn_error"
        android:layout_width="@dimen/smartloadinglayout_error_btn_width"
        android:layout_height="@dimen/smartloadinglayout_error_btn_height"
        android:layout_below="@id/tv_error_message"
        android:layout_centerHorizontal="true"
        android:text="@string/error_btn_title"
        android:textColor="#ffffff"
        android:textSize="@dimen/smartloadinglayout_text_size"
        android:layout_marginTop="@dimen/smartloadinglayout_error_btn_margin"
        android:background="@color/colorPrimary"/>
</RelativeLayout>